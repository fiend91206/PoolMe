<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:background="#000080"
	    android:orientation="vertical" >
	<ScrollView
		    android:id="@+id/scrollView1"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:background="#000080" >
		<LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:background="#000080"
		    android:orientation="vertical" >
		
		    <ImageView
		        android:id="@+id/profile_pic"
		        android:layout_width="82dp"
		        android:layout_height="82dp"
		        android:src="@drawable/ic_launcher" />
		
		    <CheckBox
		        android:id="@+id/driver"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Willing to Drive"
		        android:layout_marginTop="10dp" />
	
		    <TextView
		        android:id="@+id/contact_info"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Contact Info"
		        android:textAppearance="?android:attr/textAppearanceMedium"
		        android:layout_marginTop="10dp" />
		    
	<!--  horizontal line -->
		    <TextView
		        android:id="@+id/hl1"
		        android:layout_width="fill_parent"
				android:layout_height="2dip"
				android:background="#CFB53B" />
	
		    <ExpandableListView
		        android:id="@+id/contact_info_list"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content" >
		    </ExpandableListView>
		    
	        <TextView
		        android:id="@+id/pref"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Vehicle Information"
		        android:textAppearance="?android:attr/textAppearanceMedium"
		        android:layout_marginTop="20dp" />
		    
	<!--  horizontal line -->
		    <TextView
		        android:id="@+id/hl2"
		        android:layout_width="fill_parent"
				android:layout_height="2dip"
				android:background="#CFB53B" />
	
	       <ExpandableListView
		        android:id="@+id/vehicle_pref"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content" >
		    </ExpandableListView>
	        
	        <TextView
		        android:id="@+id/travel_info_text"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Travel Information"
		        android:textAppearance="?android:attr/textAppearanceMedium"
		        android:layout_marginTop="15dp" />
		    
	<!--  horizontal line -->
		    <TextView
		        android:id="@+id/hl3"
		        android:layout_width="fill_parent"
				android:layout_height="2dip"
				android:background="#CFB53B" />
		    
		    <ExpandableListView
		        android:id="@+id/travel_info"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content" >
		    </ExpandableListView>
	
		</LinearLayout>
	</ScrollView>

	<LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:background="#000080"
		    android:orientation="horizontal" >
	
	<Button
	    android:id="@+id/send_message"
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.15"
	    android:text="Send Message" />
	<Button
	    android:id="@+id/view_route"
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.15"
	    android:text="View Route" />

	</LinearLayout>
</LinearLayout>